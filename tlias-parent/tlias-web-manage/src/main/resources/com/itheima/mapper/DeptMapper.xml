<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itheima.mapper.DeptMapper">
    <insert id="insert">
        insert into dept(name,create_time,update_time) values (#{name},#{createTime},#{updateTime});
    </insert>
    <update id="update">
        update dept 
        <set> 
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime}
            </if>
        </set>
        where id = #{id};
    </update>
    <delete id="deletedept">
        delete from dept where id = #{id};
    </delete>
    <select id="deptlist" resultType="com.itheima.entity.po.Dept">
        select id,name,create_time as createTime,update_time as updateTime from dept;
    </select>
    <select id="getById" resultType="com.itheima.entity.po.Dept">
        select id,name,create_time as createTime,update_time as updateTime from dept where id = #{id};
    </select>
</mapper>
