<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itheima.mapper.EmpexprMapper">
    <insert id="insertExpr">
        insert into emp_expr values
        <foreach collection="exprList" item="expr" separator=",">
            (null,#{expr.begin},#{expr.end},#{expr.company},#{expr.job},#{expr.empId})
        </foreach>
    </insert>
    <delete id="deleteBactch">
        delete from emp_expr where emp_id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>
    <delete id="deleteById">
        delete from emp_expr where emp_id = #{empid}
    </delete>
</mapper>